<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_smart_margin" model="ir.ui.view">
        <field name="name">view_smart_margin</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//tree/field[@name='margin_percent']" position="attributes">
                <attribute name="decoration-danger">margin_percent&lt;=0</attribute>
            </xpath>
            <xpath expr="//form//tree/field[@name='margin']" position="attributes">
                <attribute name="decoration-danger">margin&lt;=0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
